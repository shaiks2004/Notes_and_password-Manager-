<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="Home"
        app:titleMarginStart="30dp"
        app:subtitleTextColor="@color/black"
        app:subtitle="welcome back"
        app:titleTextColor="@color/white"
        app:navigationContentDescription="back"
        android:background="@color/toolbar"
        android:elevation="4dp">

        <!-- Right aligned menu button -->
        <ImageView
            android:id="@+id/menu_btn"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:src="@drawable/baseline_dehaze_24"
            android:layout_gravity="end"
            android:backgroundTint="@color/white"
            android:background="?selectableItemBackgroundBorderless"/>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textDirection="firstStrong"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/notes"
            android:layout_margin="2dp"
            android:background="@drawable/section_border"
            android:gravity="center">


            <ImageView
                android:id="@+id/notes_img"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:src="@drawable/note" />

            <TextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:text="Notes"
                android:textSize="38sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Passwords Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="2dp"
            android:background="@drawable/section_border"
            android:id="@+id/passaword"
            android:gravity="center">


            <ImageView
                android:id="@+id/passwor_img"
                android:layout_width="96dp"
                android:layout_height="104dp"
                android:layout_marginLeft="10dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:src="@drawable/synchronize" />

            <TextView
                android:id="@+id/passwordsSection"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:text="Passwords"
                android:textSize="38sp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>