<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".write_password">'


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:navigationContentDescription="back"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:subtitleTextColor="@color/black"
        app:title="Notes"
        app:titleTextColor="@color/white">

        <TextView
            android:id="@+id/main_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Manger"
            android:textSize="20sp"
            android:textStyle="bold|normal" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="top|center"
        android:id="@+id/passwordsSection">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_name"
            android:hint="Pasword Name"
            android:textSize="25dp"
            android:height="55dp"
            android:background="@drawable/custom_edittext"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwrd_title"
            android:hint="User/email/Phone"
            android:textSize="25dp"
            android:height="55dp"
            android:background="@drawable/custom_edittext"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_pass"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:hint="Password"
            android:height="55dp"
            android:background="@drawable/custom_edittext"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/save_pass"
            android:textSize="25sp"
            android:layout_margin="15dp"
            android:textAlignment="center"
            android:backgroundTint="@color/toolbar" />

    </LinearLayout>



</RelativeLayout>